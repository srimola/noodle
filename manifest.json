{
  "manifest_version": 2,

  "name": "🅱️️hrome",
  "description": "Making sure everythings 🅱️️ool while you 🅱️️rowse with 🅱️️hrome",
  "version": "0.1",
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
    "content_scripts": [
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ]
}
